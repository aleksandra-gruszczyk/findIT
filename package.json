{
  "name": "find-it",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "node server",
    "dev": "run-p dev:client dev:server",
    "dev:client": "vite",
    "dev:server": "nodemon server",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "npm run db:migrate",
    "db": "run-s db:migrate db:seed",
    "db:migrate": "npm run knex migrate:latest",
    "db:migrate:make": "npm run knex migrate:make -- -x mjs",
    "db:seed": "npm run knex seed:run",
    "db:seed:make": "npm run knex seed:make -- -x mjs",
    "db:reset": "rm -f server/db/dev.sqlite3 && npm run db:migrate && npm run db:seed",
    "knex": "knex --knexfile server/db/knex.config.js",
    "lint": "eslint --ext .js,.jsx .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mantine/core": "^5.8.4",
    "@mantine/form": "^5.9.0",
    "@mantine/hooks": "^5.8.4",
    "@react-spring/web": "^9.5.5",
    "@use-gesture/react": "^10.2.22",
    "better-sqlite3": "^8.0.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "knex": "^2.1.0",
    "react-icons": "^4.7.1",
    "superagent": "^8.0.4",
    "zustand": "^4.1.4"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.10.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitejs/plugin-react": "^2.2.0",
    "@vitest/coverage-c8": "^0.23.4",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vitest-globals": "^1.2.0",
    "jsdom": "^20.0.0",
    "nock": "^13.2.9",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3",
    "supertest": "^6.3.1",
    "vite": "^3.2.3",
    "vitest": "^0.25.1"
  }
}
